<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hubBackground"
    tools:context=".NewHabitActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/standard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_teal"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnAddAnotherHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:onClick="onClickAddAnother"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add_white" />

    <ImageButton
        android:id="@+id/imageBtnReturnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:onClick="onClickHome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_white" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto"
        android:text="@string/add_habit"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/standard_toolbar" />

    <EditText
        android:id="@+id/newHabitName"
        android:layout_width="525dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPersonName"
        android:text="@null"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/choose_colour"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newHabitName" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <ImageButton
            android:id="@+id/imageBtnColorBlue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:onClick="onClickColor"
            app:srcCompat="@drawable/blue_circle" />

        <ImageButton
            android:id="@+id/imageBtnColorLime"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:onClick="onClickColor"
            app:srcCompat="@drawable/lime_circle" />

        <ImageButton
            android:id="@+id/imageBtnColorOrange"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:onClick="onClickColor"
            app:srcCompat="@drawable/orange_circle" />

        <ImageButton
            android:id="@+id/imageButtonColorRed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:onClick="onClickColor"
            app:srcCompat="@drawable/red_circle" />

        <ImageButton
            android:id="@+id/imageBtnColorYellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:onClick="onClickColor"
            app:srcCompat="@drawable/yellow_circle" />

        <ImageButton
            android:id="@+id/imageBtnColorPink"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:onClick="onClickColor"
            app:srcCompat="@drawable/pink_circle" />

        <ImageButton
            android:id="@+id/imageBtnColorPurple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:onClick="onClickColor"
            app:srcCompat="@drawable/purple_circle" />

        <ImageButton
            android:id="@+id/imageBtnColorWhite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:onClick="onClickColor"
            app:srcCompat="@drawable/white_circle" />

        <ImageButton
            android:id="@+id/imageBtnColorGreen"
            android:layout_width="51dp"
            android:layout_height="49dp"
            android:background="@null"
            android:onClick="onClickColor"
            app:srcCompat="@drawable/green_circle" />

        <ImageButton
            android:id="@+id/imageBtnColorCyan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:onClick="onClickColor"
            app:srcCompat="@drawable/cyan_circle" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="85dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/name"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/newHabitName"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</android.support.constraint.ConstraintLayout>